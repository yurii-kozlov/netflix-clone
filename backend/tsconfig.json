{
   "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": ["src/**/*"],
  "plugins": [
    {
      "transform": "tsconfig-paths",
      "afterDeclarations": true
    }
  ]
}
